@page
@model ExamManager.Pages.IndexModel
@{
    ViewData["Title"] = "Quản lý đề thi";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px 0;
        }
        .main-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.15);
            overflow: hidden;
        }
        .header-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 40px;
            text-align: center;
        }
        .header-section h1 {
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 10px;
        }
        .header-section p {
            opacity: 0.9;
            font-size: 1.1rem;
        }
        .content-section {
            padding: 40px;
        }
        .upload-area {
            border: 3px dashed #667eea;
            border-radius: 15px;
            padding: 60px 30px;
            text-align: center;
            background: #f8f9ff;
            transition: all 0.3s;
            cursor: pointer;
        }
        .upload-area:hover {
            border-color: #764ba2;
            background: #f0f2ff;
            transform: translateY(-5px);
        }
        .upload-area i {
            font-size: 4rem;
            color: #667eea;
            margin-bottom: 20px;
        }
        .btn-primary-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 15px 40px;
            font-weight: 600;
            font-size: 1.1rem;
            border-radius: 10px;
            transition: all 0.3s;
        }
        .btn-primary-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
        }
        .file-list {
            margin-top: 20px;
        }
        .file-item {
            background: #f8f9ff;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .file-item i {
            font-size: 1.5rem;
            color: #667eea;
            margin-right: 15px;
        }
        .result-card {
            border-radius: 15px;
            border: none;
            box-shadow: 0 5px 20px rgba(0,0,0,0.08);
            margin-top: 30px;
        }
        .result-card .card-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-weight: 600;
            border-radius: 15px 15px 0 0 !important;
            padding: 20px;
        }
        .success-box {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
            border-radius: 15px;
            padding: 30px;
            margin-top: 30px;
        }
        .success-box h4 {
            font-weight: 700;
            margin-bottom: 15px;
        }
        .form-url-box {
            background: rgba(255,255,255,0.2);
            border-radius: 10px;
            padding: 15px;
            margin-top: 20px;
        }
        .form-url-box input {
            background: white;
            border: none;
            border-radius: 8px;
            padding: 12px;
        }
        .copy-btn, .open-btn {
            border-radius: 8px;
            font-weight: 600;
            padding: 12px 25px;
        }
        .login-container {
            text-align: center;
            padding: 60px 20px;
        }
        .login-container i {
            font-size: 5rem;
            color: white;
            margin-bottom: 30px;
        }
        .login-container h1 {
            color: white;
            font-weight: 700;
            font-size: 3rem;
            margin-bottom: 20px;
        }
        .login-container p {
            color: rgba(255,255,255,0.9);
            font-size: 1.3rem;
            margin-bottom: 40px;
        }
        .btn-google {
            background: white;
            color: #667eea;
            padding: 18px 50px;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 50px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            transition: all 0.3s;
        }
        .btn-google:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.3);
            color: #764ba2;
        }
        .spinner-border-custom {
            width: 3rem;
            height: 3rem;
            border-width: 0.3rem;
        }
        .user-info {
            background: #f8f9ff;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .user-info .user-name {
            font-weight: 600;
            color: #667eea;
            font-size: 1.2rem;
        }
        .extracted-text-box {
            background: #f8f9ff;
            border-radius: 10px;
            padding: 20px;
            max-height: 400px;
            overflow-y: auto;
            font-family: 'Courier New', monospace;
            white-space: pre-wrap;
        }
    </style>
</head>
<body>
    <div class="container">
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <!-- Trang đăng nhập -->
            <div class="login-container">
                <i class="bi bi-file-earmark-text"></i>
                <h1>📝 Quản Lý Đề Thi Thông Minh</h1>
                <p>Chuyển đổi đề thi thành Google Form chỉ trong vài giây</p>
                <a href="/Login" class="btn btn-google">
                    <i class="bi bi-google me-2"></i> Đăng nhập với Google
                </a>
                <div class="mt-5">
                    <p style="color: rgba(255,255,255,0.7); font-size: 1rem;">
                        <i class="bi bi-check-circle me-2"></i> Upload ảnh, PDF, DOCX
                        <span class="mx-3">|</span>
                        <i class="bi bi-check-circle me-2"></i> OCR tự động
                        <span class="mx-3">|</span>
                        <i class="bi bi-check-circle me-2"></i> Tạo Google Form
                    </p>
                </div>
            </div>
        }
        else
        {
            <!-- Trang chính -->
            <div class="main-card">
                <div class="header-section">
                    <h1>📝 Tạo Đề Thi Google Form</h1>
                    <p>Upload file đề thi và chuyển đổi thành Google Form tự động</p>
                </div>

                <div class="content-section">
                    <!-- Thông tin user -->
                    <div class="user-info">
                        <div>
                            <i class="bi bi-person-circle me-2" style="font-size: 1.5rem; color: #667eea;"></i>
                            <span class="user-name">@User.Identity.Name</span>
                        </div>
                        <a href="/Logout" class="btn btn-outline-danger">
                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                        </a>
                    </div>

                    <form method="post" enctype="multipart/form-data" id="uploadForm">
                        <!-- Tiêu đề đề thi -->
                        <div class="mb-4">
                            <label for="formTitle" class="form-label" style="font-weight: 600; font-size: 1.1rem; color: #333;">
                                <i class="bi bi-pencil-square me-2"></i> Tiêu đề đề thi
                            </label>
                            <input type="text" 
                                   class="form-control form-control-lg" 
                                   id="formTitle" 
                                   name="formTitle" 
                                   required 
                                   placeholder="Ví dụ: Đề thi giữa kỳ Toán học - Lớp 10A"
                                   style="border-radius: 10px; border: 2px solid #e0e0e0;">
                        </div>

                        <!-- Upload area -->
                        <div class="upload-area" id="uploadArea">
                            <i class="bi bi-cloud-upload"></i>
                            <h4 style="color: #667eea; font-weight: 600;">Kéo thả file hoặc click để chọn</h4>
                            <p style="color: #888; margin-top: 10px;">
                                Hỗ trợ: JPG, PNG, PDF, DOCX • Có thể chọn nhiều file
                            </p>
                            <input type="file" 
                                   class="d-none" 
                                   id="files" 
                                   name="files" 
                                   multiple 
                                   accept=".jpg,.jpeg,.png,.pdf,.docx" 
                                   required>
                        </div>

                        <!-- Danh sách file đã chọn -->
                        <div class="file-list" id="fileList"></div>

                        <!-- Nút submit -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary-custom" asp-page-handler="Upload">
                                <i class="bi bi-magic me-2"></i> Xử lý & Tạo Google Form
                            </button>
                        </div>
                    </form>

                    <!-- Processing indicator -->
                    @if (Model.IsProcessing)
                    {
                        <div class="text-center mt-5">
                            <div class="spinner-border spinner-border-custom text-primary" role="status"></div>
                            <h4 class="mt-3" style="color: #667eea;">Đang xử lý file và tạo form...</h4>
                            <p class="text-muted">Vui lòng đợi trong giây lát</p>
                        </div>
                    }

                    <!-- Extracted text -->
                    @if (!string.IsNullOrEmpty(Model.ExtractedText))
                    {
                        <div class="result-card card">
                            <div class="card-header">
                                <i class="bi bi-file-text me-2"></i> Nội dung đã trích xuất
                                @if (Model.QuestionCount > 0)
                                {
                                    <span class="badge bg-success float-end">✓ @Model.QuestionCount câu hỏi</span>
                                }
                                <button class="btn btn-sm btn-light float-end me-2" onclick="toggleText()">
                                    <i class="bi bi-eye"></i> <span id="toggleBtn">Ẩn</span>
                                </button>
                            </div>
                            <div class="card-body" id="textContent">
                                <div class="extracted-text-box">@Model.ExtractedText</div>
                                <div class="alert alert-info mt-3 mb-0">
                                    <strong>Độ dài:</strong> @Model.ExtractedText.Length ký tự
                                    @if (Model.QuestionCount > 0)
                                    {
                                        <span class="ms-3">| <strong>Đã parse:</strong> @Model.QuestionCount câu hỏi</span>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Success result -->
                    @if (!string.IsNullOrEmpty(Model.FormUrl))
                    {
                        <div class="success-box">
                            <h4><i class="bi bi-check-circle-fill me-2"></i> Thành công!</h4>
                            <p style="margin-bottom: 0;">Google Form đã được tạo. Copy link dưới đây để gửi cho sinh viên:</p>
                            
                            <div class="form-url-box">
                                <div class="input-group">
                                    <input type="text" 
                                           class="form-control" 
                                           value="@Model.FormUrl" 
                                           id="formUrl" 
                                           readonly>
                                    <button class="btn btn-light copy-btn" onclick="copyToClipboard()">
                                        <i class="bi bi-clipboard"></i> Copy
                                    </button>
                                    <a href="@Model.FormUrl" target="_blank" class="btn btn-light open-btn">
                                        <i class="bi bi-box-arrow-up-right"></i> Mở Form
                                    </a>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Error message -->
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mt-4" style="border-radius: 15px; border: none;">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <strong>Lỗi:</strong> @Model.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Upload area interactions
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('files');
        const fileList = document.getElementById('fileList');

        if (uploadArea && fileInput) {
            uploadArea.addEventListener('click', () => fileInput.click());

            uploadArea.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '#764ba2';
                uploadArea.style.background = '#f0f2ff';
            });

            uploadArea.addEventListener('dragleave', () => {
                uploadArea.style.borderColor = '#667eea';
                uploadArea.style.background = '#f8f9ff';
            });

            uploadArea.addEventListener('drop', (e) => {
                e.preventDefault();
                uploadArea.style.borderColor = '#667eea';
                uploadArea.style.background = '#f8f9ff';
                fileInput.files = e.dataTransfer.files;
                displayFiles();
            });

            fileInput.addEventListener('change', displayFiles);
        }

        function displayFiles() {
            fileList.innerHTML = '';
            const files = fileInput.files;
            
            for (let i = 0; i < files.length; i++) {
                const file = files[i];
                const fileItem = document.createElement('div');
                fileItem.className = 'file-item';
                
                let icon = 'bi-file-earmark';
                if (file.type.includes('image')) icon = 'bi-file-earmark-image';
                else if (file.type.includes('pdf')) icon = 'bi-file-earmark-pdf';
                else if (file.type.includes('word')) icon = 'bi-file-earmark-word';
                
                fileItem.innerHTML = `
                    <div style="display: flex; align-items: center;">
                        <i class="bi ${icon}"></i>
                        <div>
                            <div style="font-weight: 600;">${file.name}</div>
                            <div style="font-size: 0.85rem; color: #888;">${(file.size / 1024).toFixed(2)} KB</div>
                        </div>
                    </div>
                    <i class="bi bi-check-circle-fill" style="color: #38ef7d; font-size: 1.5rem;"></i>
                `;
                
                fileList.appendChild(fileItem);
            }
        }

        function toggleText() {
            const content = document.getElementById('textContent');
            const btn = document.getElementById('toggleBtn');
            if (content.style.display === 'none') {
                content.style.display = 'block';
                btn.textContent = 'Ẩn';
            } else {
                content.style.display = 'none';
                btn.textContent = 'Hiện';
            }
        }

        function copyToClipboard() {
            const input = document.getElementById('formUrl');
            input.select();
            document.execCommand('copy');
            
            // Show success feedback
            const btn = event.target.closest('button');
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check-lg"></i> Đã copy!';
            btn.style.background = '#38ef7d';
            btn.style.color = 'white';
            
            setTimeout(() => {
                btn.innerHTML = originalHTML;
                btn.style.background = '';
                btn.style.color = '';
            }, 2000);
        }
    </script>
</body>
</html>